<section>
<h1 class="text-center py-5">Productos</h1>
<div class="container">
    <div class="row justify-content-around">
{{#each payload}}
        
    <div class="col-4">
        <div class="card">
        <img src={{this.thumbnail}} class="card-img-top" width="415px" height="415px" alt={{this.title}}>
        <div class="card-body text-center">
            <h5 class="card-title fs-4">{{this.title}}</h5>
            <p class="card-text ">{{this.description}}</p>
            <p class="card-text fs-6 fw-bold">Precio:${{this.price}}</p>
            <div class="d-flex justify-content-center">
                <a href="#" class="btn btn-danger"value="Agregar al carro">AÃ±adir al carrito</a>
                <button type="button" class="btn btn-dark"><a href="../products/{{this.id}}" class="verproducto" style="text-decoration: none; color:white">Ver detalles</a></button>
            </div>
        </div>
        </div>
  </div>
{{/each}}
    </div>
      <div>
         {{#if hasPrevPage}}
            <a href="{{prevLink}}" class="btn btn-success">Anterior</a>
        {{/if}}
        | 
        {{#if hasNextPage}}
            <a href="{{nextLink}}"class="btn btn-success">Siguiente</a>
        {{/if}}
    </div>
</div>

</section>
