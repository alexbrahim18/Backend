<section>
<h1 class="text-center py-5">Productos</h1>
<div class="container">
    <div class="row justify-content-around">
{{#each productos.payload}}
        
    <div class="col-4">
        <div class="card">
        <img src={{this.thumbnail}} class="card-img-top" width="415px" height="415px" alt={{this.title}}>
        <div class="card-body text-center">
            <h5 class="card-title fs-4">{{this.title}}</h5>
            <p class="card-text ">{{this.description}}</p>
            <p class="card-text fs-6 fw-bold">Precio:${{this.price}}</p>
            <div class="d-flex justify-content-center">
                
                <form action="/api/carts/add-to-cart" method="POST">
                     <input type="hidden" name="productId" value="{{this._id}}" />
                     <button type="submit">Agregar al carrito</button>
                </form>


                <form action="/api/carts/remove-from-cart" method="POST">
                     <input type="hidden" name="productId" value="{{this._id}}" />
                     <button type="submit">Eliminar del carrito</button>
                     </form>
                <button type="button" class="btn btn-dark"><a href="../products/{{this.id}}" class="verproducto" style="text-decoration: none; color:white">Ver detalles</a></button>
            </div>
        </div>
        </div>
  </div>
{{/each}}
    </div>
      <div class="paginado">
        {{#if hasPrevPage }}
            <a class="avtive" href='{{firstLink}}'>Primera</a>
            <a class="active" href='{{prevLink}}'>Anterior</a>
        {{else}}
            <a class="disabled">Primera</a>
            <a class="disabled">Anterior</a>
        {{/if}}
        {{#if hasNextPage }}
            <a class="avtive" href='{{nextLink}}'>Siguiente</a>
            <a class="active"href='{{lastLink}}'>Ultima</a>
        {{else}}
            <a class="disabled">Siguiente</a>
            <a class="disabled">Ultima</a>
        {{/if}}
</div>

</section>
